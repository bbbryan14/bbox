<%= simple_form_for @dog do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.input :image, as: :file, input_html: { multiple: true } %>

  <% if @dog.images.any? %>
    <% @dog.images.each do |image| %>
      <%= image_tag url_for(image), alt: "Photo of #{@dog.name}" %>
    <% end %>
  <% end %>

  <%= f.button :submit %>
<% end %>
